# TDC resolution (s/channel)
L.trg.tdc_res = 0.5e-9

# flag to use common stop TDC.  0 if not given (use common start)
L.trg.common_stop = 1

# Global offset (s), shared by all triggers (optional, zero if not given)
L.trg.glob_off = 0

# 5-tuples of trigger numbers, time offsets, TDC channels.
# Trigger numbers not specified are assumed to have offsets of zero.
# trigger number, offset (s) in ns, crate, slot, chan
#
# drift time = rawtime - t0 - trigger time offset
#
L.trg.trigdef =
  1   0e-9       5      16      0
  2   -10e-9     5      16      1
  3   0e-9       5      16      2





